.box{
    position: relative;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 20px 0px 0px 0px;
    overflow: hidden;
}
.user-avatar{
    padding:6px;
    width: 100px;
    margin: 10px auto;
    border-radius: 6px;
    background-color: #ddd;
}
.img{
    width: 100px;
    height: 100px;
}
.user-info{
    margin-top: 60px;
    text-align: center;
    padding: 20px 0px;
    font-size: 20px;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: bold;
    color: #fff;
    background-color: cornflowerblue;
}
.user-loginname,.createAt,.score{
    display: block;
    height: 20px;
    line-height: 20px;
    margin: 12px;
}

.post{
    position: fixed;
    bottom: 10px;
    left: 0px;
    margin-top:12px;
    background-color: silver;
}