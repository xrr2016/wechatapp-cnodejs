.posts-list{
    margin-top: 28px;
}
.posts-item{
    position:relative;
    padding: 12px 10px 12px 10px;
    font-size: 14px;
    background-color: #fff;
    border-bottom:1px solid #13beec;
}
.author{
    overflow: hidden;
    padding-bottom: 5px;
}
.author-avatar{
    width:30px;
    height: 30px;
    border-radius: 3px;
    float: left;
}
.author-name{
  color: #666;
  float: left;
  line-height:30px;
  margin-left:5px;
  font-size: 12px;
}
.posts-tag {
  background: #fff;
  border: 1px #80bd01 solid;
  padding: 2px 4px;
  border-radius: 3px;
  color: #80bd01;
  font-size: 12px;
  float: left;
  margin:6px 0px 8px 5px;
}
.hot {
  border: 1px #e25242 solid;
  color: #e25242;
}
.posts-last-reply {
  float: right;
  line-height:30px;
  color: #666;
  font-size: 12px;
}
.bar-info {
  overflow: hidden;
  height:14px;
}
.bar-info-item {
  float: right;
  font-size: 12px;
  line-height:14px;
  margin-left: 5px;
}
.bar-info-item-icon {
  width: 12px;
  height: 12px;
  vertical-align:middle;
  margin-right: 2px;
}
.bar-info-item-number {
  display:inline-block;
  color: #999;
  font-size: 12px;
  line-height:14px;
  vertical-align:middle;
}
.posts-title {
  color: #2c3e50;
  font-size: 14px;
  text-indent: 2em;
  line-height: 1.5;
  font-weight: bold;
  letter-spacing: 1px;
  padding-bottom: 5px;
}